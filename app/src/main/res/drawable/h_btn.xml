<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected ="true" >
        <shape>
            <padding android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp" />
            <solid android:color="@android:color/holo_red_light" />
            <corners android:bottomLeftRadius="20dp" android:bottomRightRadius="20dp" android:topLeftRadius="20dp" android:topRightRadius="20dp" />
            <stroke android:width="2dp" android:color="@android:color/holo_red_light" />
        </shape>

    </item >
    <item android:state_selected="false">
        <shape>
            <padding android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp" />
            <solid android:color="#F1F8FF" />
            <corners android:bottomLeftRadius="20dp" android:bottomRightRadius="20dp" android:topLeftRadius="20dp" android:topRightRadius="20dp" />
            <stroke android:width="2dp" android:color="@android:color/holo_red_light" />
        </shape>

    </item>
</selector>